const buffer = @import("basics/buffer.ruka")
const io = @import("basics/io.ruka")

const Vector = record {
    const t = record {
        x: u8,
        y: u8,
        private z: u8
    }

    const init = (x, y) do
        return t.{ x, y, z = 0 }
    end

    const add = (self: t, other: t) do
        return {
            x = self.x + other.x,
            y = self.y + other.y,
            z = self.z + other.z
        }
    end

    const write = (self: t, writer: any io.Writer) do
        writer.writeRecord(self).?
    end

    test "addition" {
        const testcase = record {
            a: t,
            b: t,
            want: t
        }

        let tests = [string, testcase]{
            "addition" = {
                num = init(1, 2),
                div = init(3, 4),
                want = init(4, 6)
            }
        }

        for k, v in tests do
            let result = v.a.add(v.b)
            @expect(result == v.want).?
            @println("test: #{k} passed")
        end
    }
}
