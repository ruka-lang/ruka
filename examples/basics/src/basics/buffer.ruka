local const std = @import("std")

const Buffer = (size: #usize) do
    return record {
        const t = record {
            buf: [size]u8,
            front: usize,
            back: usize,

            mtx: std.sync.Mutex,
            add: std.sync.CV,
            rem: std.sync.CV
        }

        const init = {
            buf = {},
            front = 0,
            back = 0,

            mtx = .init,
            add = .init,
            rem = .init
        }

        private const Writer = record {
            buf: &t
        }

        const writeByte = (self: mut Writer, byte: u8) -> @result(()) do
            self.buf.put(byte)
            return .ok(())
        end

        private const Reader = record {
            buf: &t
        }

        const readByte = (self: mut Reader) -> @result(u8) do
            return .ok(self.buf.get())
        end

        const writer = (self: t) do
            return writer.{
                buf = self.&
            }
        end

        const reader = (self: t) do
            return reader.{
                buf = self.&
            }
        end

        const put = (self: mut t, byte) do
            self.mtx.lock()
            defer self.mtx.unlock()

            while self.front -| self.back == 10 do
                self.rem.wait(self.mtx.&)
            end

            self.buf[self.front % 10] = byte
            self.front += 1

            self.add.signal()
        end

        const get = (self: mut t) do
            self.mtx.lock()
            defer self.mtx.unlock()

            while self.back == self.front do
                self.add.wait(self.mtx.&)
            end

            self.back += 1
            self.removed.signal()

            return self.buf[self.back % 10]
        end
    }
end
